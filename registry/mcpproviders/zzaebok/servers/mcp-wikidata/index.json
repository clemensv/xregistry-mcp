      "name": "search_entity",
      "description": "Search for a Wikidata entity ID by its query.",
      "inputschema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string"
          }
        },
        "required": [
          "query"
        ]
      }
    },
    {
      "name": "search_property",
